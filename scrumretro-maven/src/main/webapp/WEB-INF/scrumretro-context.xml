<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mongo="http://www.springframework.org/schema/data/mongo"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
http://www.springframework.org/schema/data/mongo http://www.springframework.org/schema/data/mongo/spring-mongo-1.2.xsd">


	<description>application context configuration</description>
    
	<context:component-scan base-package="com.scrumretro.*" />
	
	<!-- mongo configuration -->
	
	<mongo:mongo id="mongo-test" />

	<bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
		<constructor-arg ref="mongo-test" />
		<constructor-arg value="scrumretro-test" />
	</bean>
	
	<mongo:repositories base-package="com.scrumretro.repository" />
	
	<mongo:auditing auditor-aware-ref="scrumRetroAuditor" />
	
	<bean id="scrumRetroAuditor" class="com.scrumretro.repository.audit.ScrumRetroAuditor"/>
	
	
	<!-- service classes -->
	
	<bean class="com.scrumretro.web.service.ItemService" />
	
	<bean class="com.scrumretro.web.service.RetrospectiveService" />
	
	<bean class="com.scrumretro.web.service.ProjectService" />
	
	<bean class="com.scrumretro.web.service.UserService" />
	
	<!-- worker classes -->
	
	<bean class="com.scrumretro.worker.ProjectWorker" />
	
	<bean class="com.scrumretro.worker.UserWorker" />
	
	<bean class="com.scrumretro.worker.ItemWorker" />
	
	<bean class="com.scrumretro.worker.RetrospectiveWorker" />
	
	
	<!-- authentication/authorization -->
	
	<bean class="com.scrumretro.security.util.SecurityContextUtil" />
	
	<bean id="bCryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
	
	
</beans>